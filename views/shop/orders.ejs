<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css" />
  </head>

  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <h1 class="centered">Your Orders</h1>
      <% if (orders.length <= 0) { %>
        <p class="centered">No orders yet!</p>
      <% } else { %>
        <% orders.forEach(({ _id, items, totalPrice }) => { %>
          <div class="orders__item centered">
            <div class="card__content">
              <h2 class="orders__title">OrderID: <%= _id %></h2>
              <ul class="orders__products">
                <% items.forEach(({ product, quantity }) => { %>
                  <li class="orders__products-item">
                    <span><%= product.title %> (<%= quantity %>)</span>
                  </li>
                <% }) %>
              </ul>
              <h3 class="orders__total">Total: $<%= totalPrice.toFixed(2) %></h3>
            </div>
          </div>
        <% }) %>
      <% } %>
<%- include('../includes/end.ejs') %>
