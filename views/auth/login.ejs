<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css" />
  </head>

  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <div class="text-centered">
        <h1>User Login</h1>
        <%- include('../includes/flashMsgs.ejs') %>
      </div>

      <form id="login-form" class="product-form" action="/login" method="POST" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

        <div class="form-control">
          <label for="login-email">Email</label>
          <input type="email" name="email" id="login-email" value="<%= userInputs.email %>" />

          <label for="login-password">Password</label>
          <input type="password" name="password" id="login-password" value="<%= userInputs.password %>" />
        </div>

        <div class="centered">
          <button class="btn" type="submit">Login</button>
          <a class="btn" href="/register">Register</a>
          <a href="/reset">Reset Password</a>
        </div>
      </form>
<%- include('../includes/end.ejs') %>
