<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <form class="product-form" action="/admin/<%= editing ? 'edit-product' : 'add-product' %>" method="POST">
        <% if (editing) { %>
          <input type="hidden" name="id" id="id" value="<%= product._id %>" />
        <% } %>
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value="<%= editing ? product.title : '' %>" />
        </div>
        <div class="form-control">
          <label for="imgURL">Image URL</label>
          <input type="text" name="imgURL" id="imgURL" value="<%= editing ? product.imgURL : '' %>" />
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" step="0.01" name="price" id="price" value="<%= editing ? product.price : '' %>" />
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea name="description" id="description" rows="5"><%= editing ? product.description : '' %></textarea>
        </div>
        <button class="btn" type="submit">
          <% if (editing) { %>
            Update Product
          <% } else { %>
            Add Product
          <% } %>
        </button>
      </form>
<%- include('../includes/end.ejs') %>
